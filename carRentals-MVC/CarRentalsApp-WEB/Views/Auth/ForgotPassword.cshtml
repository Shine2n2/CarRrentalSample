@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "ForgotPassword";
}


@*----------------reset area 2 ----------------*@

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="text-center">
                <img src="~/Images/carImg.png" class="mx-auto d-block">
            </div>

            <div class="card my-5">

                <form method="post" class="card-body cardbody-color p-lg-5" asp-controller="Auth" asp-action="ForgotPasswordProcess">
                    <h2 class="text-left text-dark mt-5">Reset Password<br></h2>

                    <a>Enter the email associated with your account and we’ll send an email with instruction to reset your password</a>

                    <div class="form-floating mb-3 mt-3">
                        <label>Email</label>
                        <input type="text" class="form-control" id="email" placeholder="Login" asp-controller="" asp-action="" name="email">
                    </div>

                    <div class="text-center"><button type="submit" class="btn btn-color px-5 mb-5 w-100">Reset</button></div>

                </form>
            </div>

        </div>
    </div>
</div>