@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Login";
}


@*----------------Login area  ----------------*@
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="text-center">
                <img src="~/Images/carImg.png" class="mx-auto d-block">
            </div>
            <div class="card my-5">
                
                <form class="card-body cardbody-color p-lg-5" asp-controller="Auth" asp-action="Login" method="post">
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <h2 class="text-center text-dark mt-5">Login to your account<br><br></h2>
                    <div class="form-floating mb-3 mt-3">
                        <label>Email</label>
                        <input type="text" class="form-control" id="email" placeholder="Email" name="email">
                    </div>
                    <label>Password</label>
                    <div class="mb-3 passwordContainer">
                        <input type="password" name="password" class="passwordInput form-control" placeholder="Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 6 or more characters " required>
                        <div class="toggleImgContainer form-control" onclick="myFunction()"><img src="~/Images/passwordHideIcon.png" class="togglePasswordVisibility"></div>
                    </div>
                    <div class="form-text text-left mb-5 text-dark"><a href="/Auth/ForgotPassword" class="signUp-text"> Forgot passord?</a></div>
                    <div class="text-center"><button type="submit" class="btn btn-color px-5 mb-5 w-100">Login </button></div>
                    <div class="form-text text-center mb-5 text-dark">
                        Don't have an account? <a href="/Auth/SignUp" class="signUp-text"> Sign Up</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src=~/js/loginSignupLocation.js></script>