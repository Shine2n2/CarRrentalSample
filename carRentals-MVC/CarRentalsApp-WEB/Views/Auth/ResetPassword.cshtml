
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}



@*--------------Forgot Password View----------------*@

<div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
         <div class="text-center">              
              <img src="~/Images/carImg.png" class="mx-auto d-block">
            </div>

        <div class="card my-5">

          <form method="post" class="card-body cardbody-color p-lg-5">
              <h2 class="text-left text-dark mt-5">Reset Password<br><br></h2>                       

            <div class="mb-3">
                <label>New Password</label>
              <input type="password" class="form-control" id="password" placeholder="New Password" asp-controller= "" asp-action="">
            </div>
            <div class="mb-3">
                <label>Confirm Password</label>
              <input type="password" class="form-control" id="password" placeholder="Confirm Password" asp-controller= "" asp-action="">
            </div>
            <div class="text-center"><button type="submit" class="btn btn-color px-5 mb-5 w-100" asp-controller= "" asp-action="">Login</button></div>
            <div id="signId" class="form-text text-center mb-5 text-dark">Don't have an account? <a href="#" class="signUp-text"> Sign Up</a>
            </div>
          </form>
        </div>

      </div>
    </div>
  </div>


 