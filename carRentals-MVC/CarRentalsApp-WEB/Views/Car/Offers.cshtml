@model  PaginationResponse<IEnumerable<CarOffersViewModel>>
@{
    ViewData["Title"] = "CAR OFFERS";
}


<div class="list-img">
    <img src="~/images/offerpic.png" width="100%" />
</div>
<div class="car-list-container">
    <div class="container text-white text-center">
        <div class="list-text">
            <h1>Latest Offers</h1>
            <p>Explore our best offers</p>
        </div>
    </div>

    <div class="container mt-2">
        <div class="row">
            <div class="col-md-6">
                <div class="mt-1">
                    <a href="#" class="text-dark"><i class="fas fa-arrow-left mr-2"></i>Go Back</a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group has-search">
                    <span class="fa fa-search form-control-feedback"></span>
                    <input type="text"
                           class="form-control"
                           placeholder="Search for cars" />
                    <div class="input-group-append">
                        <button class="border border-none car-search-btn px-4 text-white"
                                type="button">
                            <span class="px-3">Search</span>
                            <!-- <i class="fa fa-search"></i> -->
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        @foreach (var item in Model.PageItems)
        {
        <div class="col-md-4 mt-5 p-3 h-50 w-50">
            <div class="top-car-list border">
                <a asp-action="Details">
                    <img src=@item.ImageUrl
                         alt=""
                         width="300"
                         height="250" />
                </a>
                <div class="car-list-text mt-4 px-3">
                    <a asp-action="#"><h2> @item.Model @item.Year</h2></a>
                    <div class="car-list-rate d-flex">
                        <p>@item.Rating</p>
                        <p><span class="fa fa-star checked mt-1"></span></p>
                        <p class="brackets">@item.Count people hired so far</p>
                    </div>

                    <p>@item.Price/Hours</p>
                    <p><s>N @item.Offer.Discount/Hours</s></p>

                    <a asp-action="Details" asp-route-id="@item.Offer.CarId" class="text-danger font-weight-bolder view-details"> View Details<i class="fas fa-chevron-right pl-2 text-center"></i></a>
                </div>
            </div>

        </div>


        }


    </div>
    <nav aria-label="Page navigation" class="page-navigtion">
        <ul class="pagination">
            <li class="page-item d-flex align-items-center">
                <a href=""><i class="fa fa-chevron-left"></i></a>
                <a class="page-link ml-2" href="#">
                    Prev
                </a>
            </li>
            @{
                for (var i = 1; i <= @Model.NumberOfPages; i++)
                {
                    if (Model.CurrentPage == i)
                    {
                        <li class="page-item"><a class="page-link active" id="pageButton" asp-route-pageNumber=@i>@i <span class="sr-only">(current)</span></a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" id="pageButton" asp-route-pageNumber=@i>@i</a></li>
                    }
                }
            }
            
            <li class="page-item d-flex align-items-center">

                <a class="page-link mr-2" href="#">
                    Next
                </a>
                <a href=""><i class="fa fa-chevron-right"></i></a>
            </li>
        </ul>
    </nav>

</div>
