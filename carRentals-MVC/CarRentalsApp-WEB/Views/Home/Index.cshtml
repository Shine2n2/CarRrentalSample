            <span class="fas fa-chevron-circle-left arrow"></span>
            <span class="fas fa-chevron-circle-right arrow"></span>

                 <section class = "feature-section">
                     @foreach (var item in Model)
                    {
                        <div class = "feature">
                          <img src = @item.ImageUrl  width = "270" height= "220"/>
