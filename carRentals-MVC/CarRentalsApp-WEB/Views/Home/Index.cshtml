                                    <div class = "mt-3">
                                   <i class="fas fa-check-circle" style ="color:green";></i>
                                 <span>Air Condition</span></div>
                                }else{
                                   <div class = "mt-3">
                                  <i class="fas fa-times-circle" style ="color:red";></i>
                                 <span>Air Condition</span></div>
                                }
                            @if( @item.Bluetooth)
                            {
                                <div class = "mt-3">
                                <i class="fas fa-check-circle" style ="color:green";></i>
                                 <span>Bluetooth</span></div> 
                            }else{
                                   <div class = "mt-3">
                                   <i class="fas fa-times-circle" style ="color:red";></i>
                                 <span>Bluetooth</span></div>
                                }
                            @if (item.NavigationSystem)
                            {
                                <div class = "mt-3">
                                    <i class="fas fa-check-circle" style ="color:green";></i>
                                    <span>Navigation System</span></div>
                                
                            }else{
                                <div class = "mt-3">
                                    <i class="fas fa-times-circle" style ="color:red";></i>
                                    <span>Navigation System</span></div>

                            }

                              @if (item.RemoteStart)
                            {
                                <div class = "mt-3">
                                    <i class="fas fa-check-circle" style ="color:green";></i>
                                    <span>Remote Start</span></div>
                                
                            }else{
                                <div class = "mt-3">
                                    <i class="fas fa-times-circle" style ="color:red";></i>
                                    <span>Remote Start</span></div>

                            }

                              @if (item.Sunroof)
                            {
                                <div class = "mt-3">
                                    <i class="fas fa-check-circle" style ="color:green";></i>
                                    <span>Sun Roof</span></div>
                                
                            }else{
                                <div class = "mt-3">
                                    <i class="fas fa-times-circle" style ="color:red";></i>
                                    <span>Sun Roof</span></div>

                            }

           
                                  <div class = "feature-details d-flex justify-content-between mt-4 text-dark font-weight-bold">
                                  <a asp-controller="Car" asp-action="Details" asp-route-id="@item.Id"><p>View details</p></a>
                                  <p><a href="#">
                                    <i class="fas fa-arrow-right " aria-hidden="true"></i></a>
                                     </p>                          
                                </div>  
