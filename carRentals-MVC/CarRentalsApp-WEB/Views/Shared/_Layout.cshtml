@{
    var loggedinUser = Context.Session.GetString("User");
    UserResponseViewModel user = new UserResponseViewModel();
    if (!string.IsNullOrWhiteSpace(loggedinUser))
    {
        user = JsonConvert.DeserializeObject<UserResponseViewModel>(loggedinUser);
    }
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarRentalsApp_WEB</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" >
    <link href='bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/LoginSignupLocation.css" />
    <link rel="stylesheet" href="~/css/ft-style.css" />
    <link rel="stylesheet" href="~/css/contacts.css" />
    <link rel="stylesheet" href="~/css/CarListing.css" />

</head>
<body>

    <nav class="navbar navbar-expand-lg bg-white fixed w-100">
        <div class="container-fluid h-100">

            <a class="navbar-brand ml-5" href="#">
                <img src="~/images/logo.png" alt="logo" width="120" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav ml-auto">
                    <a class="nav-link active" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="nav-link" asp-controller="Car" asp-action="Index">Cars</a>

                    <a class="nav-link" asp-controller="Car" asp-action="Offers">Offers</a>
                    <a class="nav-link" asp-controller="Home" asp-action="Location">Location</a>

                    <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>

                    <span class="nav-link">  </span>
                    @if (user.Id == null)
                    {
                        <a class="nav-link" asp-controller="Auth" asp-action="Login">Login</a>
                        <a class="nav-link" asp-controller="Auth" asp-action="SignUp">Sign Up</a>

                    }

                    else
                    {
                        <div class="account">
                            <div>
                                <img src="@user.Avatar" alt="avatar" class="img-circle-small" />
                                <span class="status topRight">&nbsp</span>
                            </div>
                            <div>@user.Firstname </div>
                        </div>
                    }


                </div>
            </div>
        </div>
    </nav>
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="page-footer font-small mt-5 ">

        <div class="container text-center text-md-left">
            <div class="row mt-5 pt-5 mb-5">
                <div class="col mx-auto">

                    <img src="~/images/logo.png" width="150" />

                </div>
                <hr class="clearfix w-100 d-md-none">
                <div class="col mx-auto footer-list">
                    <h5 class="font-weight-bold text-uppercase mt-3 mb-3">Company</h5>

                    <ul class="list-unstyled">
                        <li>
                            <a asp-action="#">About Us</a>
                        </li>
                        <li>
                            <a asp-action="#">Careers</a>
                        </li>
                        <li>
                            <a asp-action="#">Support</a>
                        </li>
                        <li>
                            <a asp-action="#">Terms and Conditions</a>
                        </li>

                    </ul>

                </div>

                <hr class="clearfix w-100 d-md-none">

                <div class="col mx-auto footer-list">
                    <h5 class="font-weight-bold text-uppercase mt-3 mb-3">Features</h5>

                    <ul class="list-unstyled">
                        <li>
                            <a asp-action="#">Vehicle Tracker</a>
                        </li>
                        <li>
                            <a asp-action="#"> Android & iOS Apps</a>
                        </li>

                    </ul>

                </div>

                <hr class="clearfix w-100 d-md-none">
                <div class="col mx-auto footer-list">
                    <h5 class="font-weight-bold text-uppercase mt-3 mb-3">Contact Us</h5>

                    <ul class="list-unstyled">
                        <li>
                            <a asp-action="#">hello@carventure.com</a>
                        </li>
                        <li>
                            <a asp-action="#">08087652244</a>
                        </li>
                        <li>
                            <a asp-action="#">
                                245B, Ikosi Ketu Road,
                                Ketu, Lagos
                            </a>
                        </li>

                    </ul>

                </div>
                <hr class="clearfix w-100 d-md-none" />
                <div class="col mx-auto footer-list">
                    <h5 class="font-weight-bold text-uppercase mt-3 mb-3">Get deals and discounts</h5>
                    <ul class="list-unstyled">
                        <li><a asp-action="#">Subscribe to our newsletter</a></li>
                        <form class="mt-3">
                            <input type="email" placeholder="Email" class="py-1 border-0" />
                        </form>

                    </ul>

                </div>

            </div>

        </div>


        <div class="footer-copyright text-center py-3 text-white">
            © 2022 Copyright:
            <a href="/" class="text-white font-weight-bold"> CarRentals.com</a>
        </div>


    </footer>
    <!-- Footer -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" ></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src='bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js' type='text/javascript'></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
     <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>